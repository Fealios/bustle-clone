{{#if updateArticleForm}}
  <h1>Update</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="image_url">Image Url</label>
        {{input value=image_url id="image_url"}}
      </div>

      <div class="form-group">
        <label for="text">Text</label>
        {{input value=text id="text"}}
      </div>

      <button {{action 'update' article}}>Save</button>
    </form>
  </div>
    {{else}}
    <button {{action 'updateArticleForm'}}>Update</button>
  {{/if}}
